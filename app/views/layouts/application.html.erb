<!DOCTYPE html>
<html>
  <head>
    <title><%= t 'title'%></title>
    <%= stylesheet_link_tag("reset")%>
    <%= stylesheet_link_tag("text")%>
    <%= stylesheet_link_tag("960")%>
	<%= stylesheet_link_tag("styles")%>
    <%= csrf_meta_tag %>
    <%= javascript_include_tag :defaults %>
  </head>
<body>
<div id="container">	
	
	<div id="header">
		<div class="container_16">
		<div class="grid_3"><%= image_tag 'logo.png' %></div>
		<div class="grid_13">			
			<nav>
			<ul id="nav">				  
				<li>
					<%= link_to t('menu.new_toy'), new_toy_path, 
						{:class => "#{if (params[:controller] == 'toys' and (params[:action] == 'new' or params[:action] == 'create')) then 'current' end}"} %>
				</li>
				<li>
					<%= link_to t('menu.toys'), toys_path, 
						{:class => "#{if (params[:controller] == 'toys' and params[:action] != 'new' and params[:action] != 'create' and params[:action] != 'thanks') then 'current' end}"} %>
				</li>
				<li><%= link_to t('menu.home'), {:controller => 'home'},
						{:class => "#{if (params[:controller] == 'home') then 'current' end}"}%>
				</li>

			</ul>
			</nav>
		</div>
		<div class="clear"></div>
		</div>	
	</div>
	
	<div id="content">
	<%= yield %>
	</div>
	
	<div id="footer">
		<div class="container_16">
			<div class="grid_15"><p><%= t 'footer.message'%></p></div>
			<div class="grid_1">
				<div id="twitter"><a href="http://www.twitter.com/wantatoy" target="_blank"><%= image_tag "twitter-icon.png"%></a></div>
			</div>		
			<div class="clear"></div>
		</div>
	</div>
	
</div>
</body>
</html>