<div class="clear"></div>
<div class="grid_16">
  <h2 id="page-heading" style="text-align:center;">
    <form action="/toys" method="get">
        ¿Que estás buscando? <%= text_field_tag :title, params[:title], :maxlength => 40, :class=>"input medium" %>
    </form>
  </h2>
</div>
<div class="clear"></div>
<div class="prefix_3 grid_1">
	<%= link_to "#{t '0-6', :scope => :recommended_ages }", :controller =>"toys", :action => "index", :recommended_age => "0-6", :title => params[:title]%>
</div>
<div class="grid_1">
	<%= link_to "#{t '7-12', :scope => :recommended_ages }", :controller =>"toys", :action => "index", :recommended_age => "7-12", :title => params[:title]%>
</div>
<div class="grid_1">
	<%= link_to "#{t '13-18', :scope => :recommended_ages }", :controller =>"toys", :action => "index", :recommended_age => "13-18", :title => params[:title]%>
</div>
<div class="grid_1">
	<%= link_to "#{t '19-24', :scope => :recommended_ages }", :controller =>"toys", :action => "index", :recommended_age => "19-24", :title => params[:title]%>
</div>
<div class="grid_1">
	<%= link_to "#{t '2-3', :scope => :recommended_ages }", :controller =>"toys", :action => "index", :recommended_age => "2-3", :title => params[:title]%>
</div>
<div class="grid_1">
	<%= link_to "#{t '4-5', :scope => :recommended_ages }", :controller =>"toys", :action => "index", :recommended_age => "4-5", :title => params[:title]%>
</div>
<div class="grid_1">
	<%= link_to "#{t '6-8', :scope => :recommended_ages }", :controller =>"toys", :action => "index", :recommended_age => "6-8", :title => params[:title]%>
</div>
<div class="grid_1">
	<%= link_to "#{t '9-11', :scope => :recommended_ages }", :controller =>"toys", :action => "index", :recommended_age => "9-11", :title => params[:title]%>
</div>
<div class="grid_1 suffix_4">
	<%= link_to "#{t '+12', :scope => :recommended_ages }", :controller =>"toys", :action => "index", :recommended_age => "+12", :title => params[:title]%>
</div>
<div class="clear"></div>

<%if (@toys.size == 0)%>
  <div class="grid_16">
    <h2 id="page-heading">No se ha encontrado ningún juguete. ¿Quieres animarte y <%= link_to 'regalar', new_toy_path %> uno de tu juguetes?</h2>
  </div>
  <div class="clear"></div>
<%else%>
  <div class="clear"></div>
  <br/>
  <div class="grid_16"><%= will_paginate @toys %></div>
  <div class="clear"></div>
  <br/>
    <% @toys.each_with_index do |toy,index| %>
      <%if ((@toys.size == index + 1) and ((index+1)%4 != 0))%>
        <div class="grid_4 suffix_<%=(4-((index+1)%4))*4%>">
      <%else%>
        <div class="grid_4">
      <%end%>
          <div class="box">
            <h2><%= toy.title %></h2>
            <div class="block">
              <p><%= link_to image_tag(toy.thumb.url(:medium)), toy %></p>
            </div>
          </div>
        </div>
        <%if ((index+1)%4 == 0)%><div class="clear"></div><%end%>
        <%end%>
  <div class="clear"></div>
<%end%>
