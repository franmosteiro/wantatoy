<% form_for @toy, :html => { :multipart => true } do |f| %>

	<% if @toy.errors.any? %>
    <div id="error_explanation">
    	<ul>
      	<% @toy.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      	<% end %>
      	</ul>
    </div>
	<% end %>
	
	<p>
    <%= f.label t 'toy_title' %>
    <%= f.text_field :title, :maxlength => 40, :class=>"input large" %>
	</p>
	<p>
    <%= f.label t 'toy_description' %>
    <%= f.text_area :description, :cols => 50, :rows => 7, :class => "styled_textarea" %>
	</p>	
	<p>
	<%= f.label t 'toy_recommended_age' %>
	<%= f.select :recommended_age, "<option value=\"0\">Por favor selecciona una opciÃ³n</option>" + 
		"<option value=\"0-6\">#{t '0-6', :scope => :recommended_ages }</option>" + 
		"<option value=\"7-12\">#{t '7-12', :scope => :recommended_ages }</option>" + 
		"<option value=\"13-18\">#{t '13-18', :scope => :recommended_ages }</option>" + 
		"<option value=\"19-24\">#{t '19-24', :scope => :recommended_ages }</option>" + 
		"<option value=\"2-3\">#{t '2-3', :scope => :recommended_ages }</option>" + 
		"<option value=\"4-5\">#{t '4-5', :scope => :recommended_ages }</option>" + 
		"<option value=\"6-8\">#{t '6-8', :scope => :recommended_ages }</option>" + 
		"<option value=\"9-11\">#{t '9-11', :scope => :recommended_ages }</option>" + 
		"<option value=\"+12\">#{t '+12', :scope => :recommended_ages }</option>", :class=>"select input"%>
	</p>
	<p>
    <%= f.label t 'toy_contact' %>
    <%= f.text_field :contact, :maxlength => 40, :class=>"input large" %>
	</p>
	<p>
	<%= f.label t 'toy_image' %>
	<%= f.file_field :thumb %>
	</p>	
	<p>
    <%= f.submit t('button_ok'), :class => "button" %>
	</p>
<% end %>
