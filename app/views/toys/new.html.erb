<div id="form">
	<div class="container_16">
		<div class="grid_16">
			<h1><%= t 'fill_toy_form'%></h1>
		</div>
		<div class="clear"></div>
		<div class="grid_10 suffix_6"><%= render 'form' %></div>
		<div class="clear"></div>
	</div>
</div>
<script type="text/javascript">
$(document).ready(function(){
  init();
  ctrl_dbl_click();

  // Definiciones
  $('#toy_description').limit('255','#charsLeft');
  function init(){
    $('input[type=submit]', this).removeAttr('disabled');
    $('#toy_title').focus();
    if ($('#error_explanation').is (':visible')) {
      $('#form').show(1);
      $('#contact_email').focus();
    }
  }
});
</script>