html {
	overflow-y:scroll;
}

body {
	color:#111111;
	font-family:13px/1.5 Helvetica,Arial,'Liberation Sans',FreeSans,sans-serif;
	font-size:16px;
	margin:0;
}

h1 {
	font-size:80px;
}

h2 {
	font-size:48px;
}

h3 {
	font-size:28px;
}

h4 {
	font-size:20px;
	margin-bottom:30px;
}
	
p {
	font-size:16px;
	line-height:24px;
}

ol {
    list-style: none outside none;
}

ul {
	list-style: none outside none;
	font-size:16px;
	line-height:24px;
}
	
small {
	font-size:14px;
}

a {
	color:#111111;
}

.clear {
	clear:both;
}

.gap {
	height:30px;
}
.lucida {
	color:#8F93A8;
	font-size:16px;
}

#wrap {
	margin:0 auto;
	max-width:1200px;
	min-width:920px;
	padding:20px 40px 0;
}

#content {
	background-color:#EEEEEE;
	margin:16px auto 0;
	max-width:1200px;
	min-width:920px;
	padding:20px 40px;
}

#background {
	background-color:#EEEEEE;
	display:none;
}

.nowrap {
	white-space:nowrap;
}
.cell_2 {
	float:left;
	margin-right:4%;
	width:48%;
}
.cell_2_last {
	float:left;
	margin-right:0;
	width:48%;
}

.cell_4 {
	font-family: 'Yanone Kaffeesatz', serif;  
	color: #007099;
	float:left;
}

#header {
	margin-top:10px;
	text-align:center;
	border-top:4px solid #007099;
}
#header h1 {
	letter-spacing:-2px;
	line-height:1;
	margin:10px 0 30px;
	word-spacing:10px;
}
#header h1 span {
	letter-spacing:-0.13em;
	padding-right:0.06em;
}
#header h4 {
	font-family: 'Yanone Kaffeesatz', serif;  
	text-shadow: 4px 4px 4px #bbb;  
	color: #007099;
	padding:18px 0;
	border-top:4px solid #007099;
}
#header h4 span {
	letter-spacing:-0.06em;
	padding-right:0.03em;
}


#nav {
	margin-left:2%;
	margin:43px 0 0;
}
#nav h3 {
	margin:0 0 13px;
}
#nav div.hover h3 {
	color:#007099;
}
#nav div.hover p {
	color:#111111;
}
#nav div.hover .lucida {
	color:#FFBFBE;
}
#nav div.hover {
	cursor:pointer;
}
#nav div.inactive {
	color:#CCCCCC;
}

/** Show_ .... links para home **/
.show {

}
div.show a {
	color:#007099;
}
div.show a:hover {
	color:#ec5210;
}
div.show h3:hover {
	color:#ec5210;
}
#footer {
	color:#FFFFFF;
	text-align:center;
	background:none repeat scroll 0 0 #007099;
}


/* Paginacion */
div.pagination {
	font-size: 11px;
	font-family: Tahoma, Arial, Helvetica, Sans-serif;
	background-color:#007099;
	color: #fff;
}
div.pagination a {
	padding: 2px 5px 2px 5px;
	margin: 2px;
	background-color:#007099;
	text-decoration: none; /* no underline */
	color: #fff;
}
div.pagination a:hover, div.pagination a:active {
	background-color:#ec5210;
	color: #fff;
}
div.pagination span.current {
	padding: 2px 5px 2px 5px;
	margin: 2px;
	font-weight: bold;
	background-color: #313131;
	color: #fff;
}
div.pagination span.disabled {
	padding: 2px 5px 2px 5px;
	margin: 2px;
	background-color:#007099;
	color: #868686;
}

/** Listado de imagenes **/
ol.galleries li {
float:left;
margin:0 20px 30px 0;
padding:0;
position:relative;
width:220px;
}
ol.galleries li.third {
margin-right:0;
}
ol.galleries li h2 {
color:#FFFFFF;
font-size:0.85em;
font-weight:normal;
line-height:1.4em;
margin:0;
padding:0 0 0 10px;
vertical-align:middle;
}
ol.galleries li h2 a img {
float:left;
margin:0 5px 0 0;
vertical-align:middle;
width:16px;
}
ol.galleries li h2 a {
font-weight:bold;
text-decoration:none;
}
ol.galleries li h2 a:hover img {
width:16px;
}
ol.galleries li div.gallery {
background: url("/images/fondo_img_bottom.png") no-repeat scroll left bottom transparent;
-moz-background-clip:border;
-moz-background-inline-policy:continuous;
-moz-background-origin:padding;
clear:left;
overflow:hidden;
padding:0 0 10px;
position:relative;
}
ol.galleries li div.gallery div.gallery-shot {
 background: url("/images/fondo_img.gif") no-repeat scroll left top transparent;
-moz-background-clip:border;
-moz-background-inline-policy:continuous;
-moz-background-origin:padding;
padding:10px;
}
ol.galleries li div.gallery a.gallery-over {
-moz-background-clip:border;
-moz-background-inline-policy:continuous;
-moz-background-origin:padding;
color:#888888;
font-size:0.8em;
height:130px;
left:10px;
line-height:2em;
margin:0;
opacity:0;
padding:10px;
position:absolute;
text-decoration:none;
top:10px;
width:180px;
}
ol.galleries li div.gallery a.gallery-over strong {
color:#ec5210;
display:block;
font-size:1.4em;
font-weight:bold;
line-height:1.2em;
margin:0;
}
ol.galleries li div.gallery a.gallery-over span.dim {
color:#666666;
font-weight:bold;
}
ol.galleries li div.gallery a.gallery-over em {
bottom:10px;
color:#888888;
display:block;
font-size:1em;
font-style:normal;
font-weight:normal;
left:10px;
line-height:1em;
margin:0 0 3px;
position:absolute;
}
ol.galleries li div.gallery-img {
height:150px;
overflow:hidden;
width:200px;
}
ol.galleries li div.gallery span.rebound-mark {
bottom:17px;
left:10px;
position:absolute;
z-index:2;
}
ol.galleries li div.gallery span.has-rebounds {
-moz-background-clip:border;
-moz-background-inline-policy:continuous;
-moz-background-origin:padding;
color:#8ABA56;
font-size:0.78em;
line-height:1.5;
padding:0 0 0 9px;
}
ol.galleries li ul.tools {
margin:10px 0 0;
text-align:left;
}